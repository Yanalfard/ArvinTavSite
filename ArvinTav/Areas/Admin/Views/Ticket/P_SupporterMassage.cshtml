@model IEnumerable<DataLayer.InnerTicket>
@foreach (var item in Model)
{
    <div class="col-10 col-sm-10 col-md-6 bg-light">
        <p>
            @item.Text
        </p>
        <time>@item.dateTime.ToShamsi()</time>
        <span>@item.User.FullName</span>
        @if (item.File != null)
        {
            <span data-placement="top" data-toggle="tooltip" title="" data-original-title="دارای فایل">
                <a id="InnerTicket"><i class="fas fa-file-download mr-2"></i></a>
            </span>
        }
    </div>
    @:&nbsp;
}
