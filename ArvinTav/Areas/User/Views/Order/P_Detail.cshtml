@model DataLayer.Order
<div class="modal-header">
    <h6 class="modal-title mr-3" id="modalCenterTitle">
        جزئیات سفارش
    </h6>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div id="card-table" class="card-body flex-div">
            <div class="form-row ">
                <div class="form-group col-md-5">
                    <label>کد سفارش:</label>
                    <span>@Model.ID</span>
                </div>
                <div class="form-group col-md-5">
                    <label>بسته مربوطه:</label>
                    <a href="/Product/@Model.PackageService.ID/@Model.PackageService.Title.Replace(" ","-")" target="_blank">@Model.PackageService.Title</a>
                </div>
                <div class="form-group col-md-5">
                    <label>زمان:</label>
                    <span>@Model.DateTime.ToShamsi()</span>
                </div>
                <div class="form-group col-md-5">
                    <label>وضعیت:</label>
                    @if (Model.Status == 1)
                    {
                        <span class="text-info">منتظر پرداخت</span>
                    }
                    else if (Model.Status == 2)
                    {
                        <span class="text-primary">پرداخت شده</span>
                    }
                    else if (Model.Status == 3)
                    {
                        <span class="text-success">تکمیل شده</span>
                    }
                    else if (Model.Status == 4)
                    {
                        <span class="text-muted">لغو شده</span>
                    }
                </div>
            </div>
            <label>توضیحات سفارش:</label>
            <div class="bg-costum p-3 text-justify uk-border-rounded" rows="6">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-row ml-4 ">

            <label class="uk-text-bold">قیمت کل:</label>
            <span id="PriceSpan" class="text-success uk-text-bold mr-1">@Model.Price تومان</span>

        </div>
    </div>
</form>

<script src="~/Tools/Span_Formatting_Currency.js"></script>
