@model DataLayer.PackageService
@{
    ViewBag.Title = "محصول "+Model.Title.Replace(" ","-");
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="productsSection allPageGreenBackground">
    <div class="cover uk-height-large uk-background-cover uk-light uk-flex" uk-parallax="bgy: -200">
        <img src="~/img/Home/gridbackground.png" />
    </div>

    <!--description region-->
    <div class=" product center">
        <img src="~/Document/img/Package/@Model.Image" width="250"  height="250" />
        
    </div>
    <div class="productcontent my-column" dir="rtl">
        <div class="uk-padding-small my-column my-clipped">
            <div class="my-row">
                <label class="uk-text-bold">رضایت مشتری</label>
                <progress class="" id="security" value="3" max="5"> 3 </progress>
                <label class=" amount uk-text-bold ">3/5</label>
            </div>
            <ul class="my-column uk-padding-remove" dir="rtl">
                @foreach (var item in Model.PackageServiceDetails)
                {
                    <li> <i class="fas fa-check uk-text-success"></i>@item.Title</li>
                }
            </ul>
            <div class="Price uk-margin-auto-right" dir="rtl">
                <label id="PriceSpan" class="uk-margin-small-left uk-text-bold">@Model.Price تومان</label>
                <a class="ServiceButton" href="/PaymentSuccses/@Model.ID">سفارش</a>
            </div>
        </div>

    </div>


    <div class="descriptionOfProduct mat" dir="rtl">
        <h4>درباره پکیج</h4>
        <p>
            @Html.Raw(Model.Description)
        </p>
    </div>

</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="/Tools/Span_Formatting_Currency.js"></script>


