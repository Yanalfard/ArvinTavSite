
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">

            <div class="card-body flex">
                <div class="row flex-div flex-div-row">
                    <div class="col-lg-4 col-12 flex-div">
                        <div class="card categry-box flex-div">
                            <div class="card-header">
                                موضوع
                            </div>
                            <div class="card-body flex p-0">
                                <ul class="list-group list-group-flush">
                                    <li id="1" class="list-group-item kind">
                                        <div class="row">

                                            <a href="#ChildCategoryList" onclick="BtnShowChildCategory(1)" class="col-xl-9 col-lg-8  col-sm-10 col-9"><span data-placement="top" data-toggle="tooltip" title="" data-original-title="مشاهده دسته بندی ">ویندوز</span></a>

                                            <div class="col-xl-3 col-lg-4  col-sm-2 col-3">
                                                <div class="option d-flex">
                                                    <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                                        <a onclick="btnEditCategory(1)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                                                    </span>
                                                    <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                                        <a onclick="btnRemoveCategory(1)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="uk-padding-small input-group input-group-sm mt-3">
                                @*<input id="KindNameInput" type="text" class="form-control" placeholder="موضوع جدید را وارد کنید" aria-label="add-kind" aria-describedby="button-addon">*@
                                <div class="uk-margin-auto-left uk-margin-auto-right input-group-append">
                                    <a id="AddKindCategory" class="btn btn-success btn-sm text-white float-right" data-toggle="modal" data-target="#modalSave"><i class="fas fa-plus-circle"></i>افزودن</a>
                                </div>
                            </div>
                        </div>
                       

                    </div>
                    <div id="ChildCategoryList" class="col-lg-4 col-12 flex-div">
                    </div>
                    <div id="SubCategoryList" class="col-lg-4 col-12 flex-div">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalSave" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
                        <img src="~/img/gif/load.gif" class="loding justify-content-center" />
            @*JS Dynamic*@
        </div>
    </div>
</div>
<!-- Button trigger modal -->
