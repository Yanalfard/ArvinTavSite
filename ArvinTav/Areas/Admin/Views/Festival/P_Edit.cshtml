@model DataLayer.Discount

<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        ویرایش تخفیف @Model.Code
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="Title">کد تخفیف</label>
                <input type="text" class="form-control form-control-sm" id="Code" placeholder="کد تخفیف" value="@Model.Code">
            </div>
            <div class="form-group col-md-7">
                <label for="Price">درصد تخفیف</label>
                <input type="text" id="Percentage" class="form-control form-control-sm" placeholder="درصد تخفیف" value="@Model.Percentage">
            </div>
        </div>

    </div>
    <div class="space-half"></div>
    <div class="modal-footer justify-content-end">
        <img src="~/img/gif/load.gif" class="loding justify-content-center d-none" />
        <a id="BtnEditDiscount" onclick="EditDiscount(@Model.ID)" class="btn btn-success btn-sm text-white"><i class="fas fa-plus-circle"></i>ویرایش</a>
    </div>
</form>

<script src="~/Areas/Admin/CommandJs/Festival.js"></script>