}


<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
                <div class="row justify-content-end">
                    <div class=" col-12">
                        <div class="card-form row">
                            <div class="form-input col-md-5">
                                <div class="form-inline">
                                    <div class="form-group mx-sm-1 mb-2">
                                        <input id="TicketIDSearch" class="form-control form-control-sm" type="text" placeholder="کدتیکت" value="">
                                    </div>
                                    <div class="form-group mx-sm-1 mb-2">
                                        <select id="DegreeSearch" class="form-control form-control-sm">
                                            <option value="0" selected="">وضعیت</option>
                                            <option value="1">باز نشده</option>
                                            <option value="2">خوانده شده</option>
