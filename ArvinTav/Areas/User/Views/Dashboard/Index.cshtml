@model DataLayer.User
@{

    ViewBag.Title = "داشبورد";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

@if (Model.FullName == null && Model.Brand == null && Model.Email == null && Model.Image == null)
{
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 15%">15%</div>
    </div>
}


@if (Model.FullName != null && Model.Brand == null && Model.Email == null && Model.Image == null)
{
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%">25%</div>
    </div>
}

@if (Model.FullName != null && Model.Brand != null && Model.Email == null && Model.Image == null)
{

    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">50%</div>
    </div>
}

@if (Model.FullName != null && Model.Brand != null && Model.Email != null && Model.Image == null)
{
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">75%</div>
    </div>
}

@if (Model.FullName != null && Model.Brand != null && Model.Email != null && Model.Image != null)
{
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">پرفایل شما تکمیل شده است</div>
    </div>
}
<div class="row flex-div">
    <div class="col-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow text-center">
            <div id="card-table" class="card-body flex-div">
                <div class="table-responsive flex row">
                    <div class="col-12">
                        @if (Model.Image == null)
                        {
                            <img src="~/img/Admin/userPro.png" height="50" width="50" />
                        }
                        else
                        {
                            <img src="~/Document/img/User/@Model.Image" height="50" width="50" />
                        }
                        @if (Model.FullName != null)
                        {
                            <h3>@Model.FullName</h3>
                        }
                        else
                        {
                            <h3>@Model.PhoneNumber</h3>
                        }
                    </div>

                    <div class="card-body form-group">
                        <div class="text-center">
                            <div class="form-group  justify-content-center">
                                <label>نام تجاری:</label>
                                <span>@Model.Brand</span>
                            </div>
                            <div class="form-group justify-content-center">
                                <label>ایمیل</label>
                                <span>@Model.Email</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="custom-file">
                    <div class="btn btn-success btn-sm">
                        @Html.ActionLink("ویرایش اطلاعات", "MyProfile", null, new { @class = "text-white" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


