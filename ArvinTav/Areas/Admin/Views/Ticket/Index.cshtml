                                <th scope="col">داخل تیکت</th>
                                <th scope="col">وضعیت</th>
                                <th scope="col">زمان تکمیل تیکت</th>
                                <th scope="col">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    84563
                                </td>
                                <td>
                                    مشکل فنی
                                </td>
                                <td>
                                    رضا نامدار
                                </td>
