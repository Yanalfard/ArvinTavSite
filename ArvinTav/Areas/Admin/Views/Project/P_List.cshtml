@model IEnumerable<DataLayer.Project>
<div id="card-table" class="card-body flex-div">
    <div class="table-responsive flex">
        <table class="table fixed">
            <thead class="thead-light">
                <tr>
                    <th scope="col">عنوان</th>
                    <th scope="col">وضعیت</th>
                    <th scope="col">عملیات</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count() == 0)
                {
                    <tr>
                        <td>
                            یافت نشد
                        </td>
                    </tr>
                }

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        @if (item.Status == 1)
                        {
                            <td class="text-warning">
                                در حال ساخت
                            </td>
                        }
                        else if (item.Status == 2)
                        {
                            <td class="text-success">
                                تکمیل شده
                            </td>
                        }
                        <td>
                            <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                <a onclick="EditList(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="fas fa-edit text-primary"></i></a>
                            </span>
                            @if (item.Status == 1)
                            {
                                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="خاموش">
                                    <a onclick="ChangeStatus(@item.ID)"><i class="text-danger fas fa-toggle-off"></i></a>
                                </span>
                            }
                            else if (item.Status == 2)
                            {
                                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="روشن">
                                    <a onclick="ChangeStatus(@item.ID)"><i class="text-success fas fa-toggle-on"></i></a>
                                </span>
                            }

                            <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                <a onclick="DelFromList(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="fas fa-trash text-danger"></i></a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



