@model IEnumerable<DataLayer.Ticket>
<li class="notifications dropdown">
    <span class="counter">@Model.Count()</span>
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fas fa-bell"></i>
    </a>
    <ul class="dropdown-menu ">
        <li class="notice-header">
            <i class="fas fa-headset"></i>
            <span>تیکت ها</span>
        </li>
        <li>
            <ul class="list-info overflow-y-auto relative scrollable">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Admin/Ticket?PageId=1&TicketIDSearch=@item.ID&StatusSearch=0&CategorySearch=0&InPageCount=0">
                            @if (item.User.Image != null)
                            {
                                <img class="thumb-img" src="~/Document/img/User/@item.User.Image" alt="">
                            }
                            else
                            {
                                <img src="~/img/Admin/userPro.png " height="50" width="50" />
                            }
                            <div class="info">
                                <span class="title">
                                    <span class="font-size-14 text-semibold">@item.Subject</span>
                                </span>

                            </div>
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="notice-footer">
            <span>
                <a href="/Admin/Ticket" class="text-gray">مشاهده همه تیکت ها<i class="ei-right-chevron pl-1 font-size-10"></i></a>
            </span>
        </li>
    </ul>
</li>
