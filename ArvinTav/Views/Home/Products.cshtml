@model IEnumerable<DataLayer.Product>

@{

    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

    <!--grid(host) region-->
    <div class="productsSection">

        <div class="uk-margin-auto-right uk-margin-auto-left uk-margin-auto-top uk-margin-auto-bottom cover uk-height-large uk-background-cover uk-light uk-flex" uk-parallax="bgy: -200">
            <img class="uk-margin-auto uk-margin-top center" src="~/Document/img/Category/@Model.FirstOrDefault().ServiceCategory.Image" />
        </div>
        <div class="GridBackground">
            <content class="grid " dir="rtl">
                @foreach (var item in Model)
                {
                    if (item.SideID == 1)
                    {
                        <article class="my-column mat uk-padding my-clipped ">
                            <content>
                                <div class="center"><i class="fas fa-server fa-4x uk-text-primary"></i></div>
                                <h4 class="center">@item.HostingService.Title</h4>
                                <ul class="my-column uk-padding-remove" dir="rtl">
                                    @foreach (var Detail in item.HostingService.HostingServiceDetails.Where(hs => hs.Kind == 1).Take(4))
                                    {
                                        <li> <i class="fas fa-check uk-text-success"></i>@Detail.Title @Detail.Response</li>

                                    }
                                    @*<li class="uk-margin-top"><a href="/product"><i class="fas fa-info-circle uk-text-primary"></i>جزئیات محصول</a></li>*@
                                </ul>
                                <a href="/Product/@item.ID" class="ServiceButton">جزئیات و سفارش</a>
                            </content>
                        </article>
                    }
                    else if (item.SideID == 2)
                    {

                        <article class="my-column mat uk-padding my-clipped ">
                            <content>
                                <div class="center"><i class="fas fa-globe-americas fa-4x uk-text-primary"></i></div>
                                <h4 class="center">.@item.DomainService.Suffix</h4>
                                <a href="/Product/@item.ID" class="ServiceButton">جزئیات و سفارش</a>
                            </content>
                        </article>

                    }
                    else if (item.SideID == 3)
                    {

                        <article class="my-column mat uk-padding my-clipped ">
                            <content>
                                <div class="center"><i class="fas fa-box fa-4x uk-text-primary"></i></div>
                                <h4 class="center">@item.PackageService.Title</h4>
                                <div class="my-column uk-padding-remove" dir="rtl">
                                    @Html.Raw(item.PackageService.Description)
                                </div>
                                <a href="/Product/@item.ID" class="ServiceButton">جزئیات و سفارش</a>
                            </content>
                        </article>

                    }
                }
            </content>

        </div>
    </div>
    <!--end region -->
