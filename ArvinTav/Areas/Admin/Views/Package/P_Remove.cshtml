@model DataLayer.PackageService
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">حذف از لیست</h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="space"></div>

<h6 class="center">آیا میخواهید بسته @Model.Title حذف شود؟</h6>
<div class="space"></div>
<div class="modal-footer justify-content-end">
    <img src="~/img/gif/load.gif" class="loding justify-content-center d-none" />
    <button onclick="ConfirmDelete(@Model.ID)" type="button" class="btn btn-sm btn-danger">
        بله
    </button>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">خیر</button>

</div>

<script>

    function ConfirmDelete(ID) {
        $(".loding").removeClass('d-none');
        $.post("/Admin/Package/Remove?ID=" + ID, function (result) {
            if (result == "true") {
                window.location.reload();
            } else {
                alert(result);
            }
        });
    }

</script>


