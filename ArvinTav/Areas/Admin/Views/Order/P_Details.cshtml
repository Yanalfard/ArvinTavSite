@model DataLayer.Order
<div class="modal-header">
    <h6 class="modal-title mr-3" id="modalCenterTitle">
        جزئیات سفارش
    </h6>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form>
    <div class="modal-body">
        <div id="card-table" class="card-body flex-div">
            <div class="form-row ">
                <div class="form-group col-md-4">
                    <label>کد سفارش:</label>
                    <span>@Model.ID</span>
                </div>
                <div class="form-group col-md-4">
                    <label>نام مشتری:</label>
                    <span>@Model.User.FullName</span>
                </div>
                <div class="form-group col-md-4">
                    <label>شماره مشتری:</label>
                    <span>@Model.User.PhoneNumber</span>
                </div>
                <div class="form-group col-md-4">
                    <label>زمان:</label>
                    <span>@Model.DateTime.ToShamsi()</span>
                </div>
                <div class="form-group col-md-4">
                    <label>وضعیت:</label>
                    @if (Model.Status == 1)
                    {
                        <span class="text-primary">منتظر پرداخت</span>
                    }
                    else if (Model.Status == 2)
                    {
                        <span class="text-info">پرداخت شده</span>
                    }
                    else if (Model.Status == 3)
                    {
                        <span class="text-success">تکمیل شده</span>
                    }
                    else if (Model.Status == 4)
                    {
                        <span class="text-muted">لغو شده</span>
                    }
                </div>
                <div class="form-group col-md-4">
                    <label>بسته نرم افزاری :</label>
                    <span><a href="/Product/@Model.PackageService.ID/@Model.PackageService.Title.Replace(" ","-")" target="_blank">@Model.PackageService.Title</a></span>
                </div>
            </div>
            <div class=" my-column">
                <p class="justify-text uk-width-1-1">
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-row ml-xl-4 ml-4 ">
            <label class="uk-text-bold">قیمت کل:</label>
            <span id="PriceSpan" class="text-success uk-text-bold">@Model.Price</span>
        </div>
    </div>
</form>
<script src="~/Tools/Span_Formatting_Currency.js"></script>

