@model IEnumerable<DataLayer.HostingService>
<div id="card-table" class="card-body flex-div">
    <div class="table-responsive flex">
        <table class="table fixed">
            <thead class="thead-light">
                <tr>
                    <th scope="col">متن</th>
                    <th scope="col">فضا</th>
                    <th scope="col">جزئیات</th>
                    <th scope="col">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>

                        <td>
                            @item.Space
                        </td>
                        <td>
                            <span data-placement="top" data-toggle="tooltip" title="" data-original-title="جزئیات">
                                <a onclick="HostDetails(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="fas mr-2 fa-info-circle text-info"></i></a>
                            </span>
                        </td>

                        <td>
                            <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                <a onclick="EditHosting(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                            </span>
                            <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                <a onclick="DeleteHosting(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                            </span>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<script>
    function HostDetails(ID) {
        $(".modal-content").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
        $.get("/Admin/Hosting/P_HostingDetails?ID=" + ID, function (result) {
            $(".modal-dialog").removeClass("modal-xl");
            $(".modal-dialog").removeClass("modal-md");
            $(".modal-dialog").addClass("modal-lg");
            $(".modal-content").html(result);
        });
    }

    function EditHosting(ID) {
        $(".modal-content").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
        $.get("/Admin/Hosting/P_Edit?ID=" + ID, function (result) {
            $(".modal-dialog").removeClass("modal-xl");
            $(".modal-dialog").removeClass("modal-md");
            $(".modal-dialog").addClass("modal-lg");
            $(".modal-content").html(result);
        });
    }

    function DeleteHosting(ID) {
        $(".modal-content").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
        $.get("/Admin/Hosting/P_Remove?ID=" + ID, function (result) {
            $(".modal-dialog").removeClass("modal-xl");
            $(".modal-dialog").removeClass("modal-lg");
            $(".modal-dialog").addClass("modal-md");
            $(".modal-content").html(result);
        });
    }
</script>

