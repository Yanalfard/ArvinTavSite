@model IEnumerable<DataLayer.ServiceCategory>

<div id="@Model.FirstOrDefault().ParentID" class="col-lg-3 col-12 mt-2">
    <div class="card categry-box">
        <div class="card-body categry-body p-0">
            <ul class="list-group list-group-flush">
                @foreach (var item in Model)
                {
                    <li id="@item.ID" class="list-group-item kind">
                        <div class="row">

                            <a onclick="BtnShowChildCategory(@item.ID)" class="col-xl-9 col-lg-8  col-sm-10 col-9"><span data-placement="top" data-toggle="tooltip" title="" data-original-title="مشاهده دسته بندی ">@item.Title</span></a>

                            <div class="col-xl-3 col-lg-4  col-sm-2 col-3">
                                <div class="option d-flex">
                                    <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                        <a onclick="BtnEditCategory(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                                    </span>
                                    <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                        <a onclick="BtnRemoveCategory(@item.ID)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="input-group input-group-sm mt-3">

            <div class="input-group-append">
                <a onclick="AddChildCategory(@Model.FirstOrDefault().ParentID)" class="btn btn-success btn-sm text-white" data-toggle="modal" data-target="#modalSave"><i class="fas fa-plus-circle"></i>افزودن</a>
            </div>
        </div>
    </div>

</div>

