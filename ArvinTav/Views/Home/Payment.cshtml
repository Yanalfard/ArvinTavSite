@model DataLayer.PackageService
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="GridBackground loginSection center">
    <content class="grid" dir="rtl">
        <div class="my-column my-clipped center mat loginSection paymentPage">
            <content>
                <img src="~/img/products/payment.jpg" width="320" />
                <div class="center my-column">
                    <label class="TitleInPayment">نام پکیج</label>
                    <label>@Model.Title</label>
                    &nbsp;
                    <label class="TitleInPayment">قیمت</label>
                    <span id="PriceSpan">@Model.Price<span class="uk-margin-small-right">تومان</span></span>
                    <a class="ServiceButton uk-margin-auto-left uk-margin-auto-right uk-margin-medium-top" href="/Home/PaymentPay?ID=@Model.ID">پرداخت</a>
                </div>
            </content>
        </div>

    </content>
</div>

@section Scripts{
    <script src="~/Tools/Span_Formatting_Currency.js"></script>

    }

