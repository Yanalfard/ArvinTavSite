
@{
    ViewBag.Title = "گزارش پرداخت";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}




<div class="loginSection center">
    <content class="grid successNotification" dir="rtl">
        <div class="my-column my-clipped center uk-margin-xlarge-top mat">

            @if (ViewBag.RefID != null)
            {
                <div class="uk-alert-success uk-alert" uk-alert="">
                    <a class="uk-alert-close uk-icon uk-close" uk-close=""><svg width="14" height="14" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg" data-svg="close-icon"><line fill="none" stroke="#000" stroke-width="1.1" x1="1" y1="1" x2="13" y2="13"></line><line fill="none" stroke="#000" stroke-width="1.1" x1="13" y1="1" x2="1" y2="13"></line></svg></a>
                    <p>سفارش شما با موفقیت ثبت شد</p>
                </div>
            }

            @if (ViewBag.RefID != null)
            {
                @:    کد پیگیری زرین پال
                @ViewBag.RefID
            }
            <br />

            @if (ViewBag.OrderID != null)
            {
                @:    کد سفارش
                @ViewBag.OrderID
            }

            @if (ViewBag.Erorr != null)
            {
                @:    خطا
                @ViewBag.Erorr
            }

        </div>
    </content>
</div>
