<!--Alert Box-->
@section Scripts{
    <script>

        $(function () {
            $('#my-textarea').ckeditor();
        });

        $("#AddKindCategory").click(function () {
            $.get("/Admin/ServiceCategory/P_Create?ParentID=0", function (result) {
                $(".modal-dialog").removeClass("modal-md");
                $(".modal-dialog").removeClass("modal-lg");
                $(".modal-dialog").addClass("modal-xl");
                $(".modal-content").html(result);
            });
        });
        $("#EditCategory").click(function () {
            $.get("/Admin/ServiceCategory/P_Edit", function (result) {
                $(".modal-dialog").removeClass("modal-md");
                $(".modal-dialog").removeClass("modal-lg");
                $(".modal-dialog").addClass("modal-xl");
                $(".modal-content").html(result);
            });
        });
        $("#deletButton").click(function () {
            $.get("/Admin/ServiceCategory/P_Remove", function (result) {
                $(".modal-dialog").removeClass("modal-xl");
                $(".modal-dialog").removeClass("modal-lg");
                $(".modal-dialog").addClass("modal-md");
                $(".modal-content").html(result);
            });
        });

    </script>

