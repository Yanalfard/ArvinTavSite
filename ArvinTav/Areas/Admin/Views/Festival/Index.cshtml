
@{
    ViewBag.Title = "جشنواره";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
                <div class="row justify-content-end">
                    <div class="col-md-12 col-12">
                        <a id="AddList" class="btn btn-success btn-sm text-white float-right" data-toggle="modal" data-target="#modalSave"><i class="fas fa-plus-circle"></i>افزودن</a>
                    </div>
                </div>
            </div>
            @Html.Action("P_List")
            <div class="card-footer bg-white">

            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalSave" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <img src="~/img/gif/load.gif" class="loding justify-content-center" />
            @*JS Dynamic*@
        </div>
    </div>
</div>
<!-- Button trigger modal -->


@section Scripts{
    <script>

        $("#AddList").click(function () {
            $.get("/Admin/Festival/P_Create", function (result) {
                $(".modal-dialog").removeClass("modal-xl");
                $(".modal-dialog").removeClass("modal-md");
                $(".modal-dialog").addClass("modal-lg");
                $(".modal-content").html(result);
            });
        });
        function DelList(ID) {
            $.get("/Admin/Festival/P_Remove?ID=" + ID, function (result) {
                $(".modal-dialog").removeClass("modal-xl");
                $(".modal-dialog").removeClass("modal-lg");
                $(".modal-dialog").addClass("modal-md");
                $(".modal-content").html(result);
            });
        }
        function EditList(ID) {
            $.get("/Admin/Festival/P_Edit?ID=" + ID, function (result) {
                $(".modal-dialog").removeClass("modal-xl");
                $(".modal-dialog").removeClass("modal-md");
                $(".modal-dialog").addClass("modal-lg");
                $(".modal-content").html(result);
            });
        }
    </script>

}




