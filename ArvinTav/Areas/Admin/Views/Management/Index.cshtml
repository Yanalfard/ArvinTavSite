
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white row text-center">
                <div id="SpiderPaper" class="col-4 pt-3 pt-sm-2 pb-2 col-md-2 table-bordered">
                    <a>اسپایدر</a>
                </div>
                <div id="MarketerReportPaper" class="col-4 col-md-2 pt-2 pb-2  table-bordered">
                    <a>گزارش نمایندگی ها</a>
                </div>
                <div id="RevenuesPaper" class="col-4 col-md-2 pt-3 pt-sm-2 pb-2  table-bordered">
                    <a>درآمدها</a>
                </div>
                <div id="OrderPaper" class="col-4 col-md-2 pt-2 pb-2  table-bordered">
                    <a>پیگیری سفارشات</a>
                </div>
                <div id="TicketPaper" class="col-4 col-md-2 pt-3 pt-sm-2 pb-2 table-bordered">
                    <a> تیکت ها</a>
                </div>
                <div id="MassagePaper" class="col-4 col-md-2 pt-3 pt-sm-2 pb-2 table-bordered">
                    <a>پیغام ها</a>
                </div>
            </div>

            <div id="card-table" class="card-body flex-div">
                @Html.Action("P_Spider")
            </div>
            
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalSave" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <img src="~/img/gif/load.gif" class="loding justify-content-center" />
            @*JS Dynamic*@
        </div>
    </div>
</div>
<!-- Button trigger modal -->

@section Scripts{
    <script>
        $("#SpiderPaper").click(function () {
            $("#card-table").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
            $.get("/Admin/Management/P_Spider", function (result) {
                $("#card-table").html(result);
            });
        });

        $("#MarketerReportPaper").click(function () {
            $("#card-table").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
            $.get("/Admin/Management/P_MarketerReport", function (result) {
                $("#card-table").html(result);
            });
        });

        $("#RevenuesPaper").click(function () {
            $("#card-table").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
            $.get("/Admin/Management/P_Revenues", function (result) {
                $("#card-table").html(result);
            });
        });

        $("#OrderPaper").click(function () {
            $("#card-table").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
            $.get("/Admin/Management/P_OrderExplorer", function (result) {
                $("#card-table").html(result);
            });
        });

        $("#TicketPaper").click(function () {
            $("#card-table").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
            $.get("/Admin/Management/P_TicketExplorer", function (result) {
                $("#card-table").html(result);
            });
        });

        $("#MassagePaper").click(function () {
            $("#card-table").html("<img src='/img/gif/load.gif' class='loding justify-content-center' />");
            $.get("/Admin/Management/P_Massage", function (result) {
                $("#card-table").html(result);
            });
        });

    </script>
    
    }
