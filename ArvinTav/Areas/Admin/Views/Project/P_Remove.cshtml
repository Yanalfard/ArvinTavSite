@model DataLayer.Project
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">حذف از لیست</h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="space"></div>
<h6 class="center">آیا میخواهید پروژه @Model.Title حذف شود؟</h6>
<div class="space"></div>
<div class="modal-footer justify-content-end">
    <img src="~/img/gif/load.gif" class="loding justify-content-center d-none" />
    <button onclick="BtnRemoveProject(@Model.ID)" type="button" class="btn btn-sm btn-danger">
        بله
    </button>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">خیر</button>

</div>

<script>
    function BtnRemoveProject(ID) {
        $.post("/Admin/Project/Remove?ID=" + ID, function () {
            window.location.reload();
        });
    }
</script>