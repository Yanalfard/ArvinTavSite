@model DataLayer.HostingService
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">حذف از لیست</h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="space"></div>

<h6 class="center">آیا میخواهید هاست @Model.Title حذف شود؟</h6>
<div class="space"></div>
<div class="modal-footer justify-content-end">
    <img src="~/img/gif/load.gif" class="loding justify-content-center d-none" />
    <button onclick="RemoveHostingCategory(@Model.ID)" type="button" class="btn btn-sm btn-danger">
        بله
    </button>
    <button id="CancelDelete" type="button" class="btn btn-sm btn-info">خیر</button>
</div>

<script>
    function RemoveHostingCategory(ID) {
        $(".loding").removeClass("d-none");
        $.get("/Admin/Hosting/Remove?ID=" + ID, function (result) {
            if (result == "true") {
                window.location.reload();
            } else {
                alert(result);
            }
        });
    }
</script>


